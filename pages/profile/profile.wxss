/* pages/profile/profile.wxss */
.profile {
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info {
  position: relative;
  padding: 40rpx 30rpx;
  background: #27BA9B;
  color: #fff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-right: 30rpx;
}

.user-name-wrapper {
  display: flex;
  align-items: center;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-right: 15rpx;
}

.user-role-tag {
  font-size: 22rpx;
  color: #27BA9B;
  background-color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  line-height: 1;
}

.login-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  border: 2rpx solid #fff;
  font-size: 28rpx;
}

/* 用户数据概览 */
.user-stats {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 2rpx solid #eee;
}

.stat-item:last-child {
  border-right: none;
}

.stat-item .number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #27BA9B;
}

.stat-item .label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 功能列表 */
.menu-list {
  background-color: #fff;
  padding: 0 30rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
  flex-grow: 1;
}

.menu-item-left .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-item-left text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}