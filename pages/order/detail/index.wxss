/* pages/order/detail/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: #f8f8f8;
}

.loading {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #27BA9B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 订单头部样式 */
.order-header {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.status-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.task-status {
  background-color: #f2f2f2;
  color: #666;
}

.order-status {
  font-weight: 500;
}

.order-status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.order-status.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.order-status.cancelled {
  background-color: #f5f5f5;
  color: #999;
}

/* 内容区域样式 */
.section {
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background-color: #07c160;
  border-radius: 3rpx;
}

.section-content {
  padding: 24rpx 30rpx;
}

/* 信息列表样式 */
.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 160rpx;
  color: #666;
  flex-shrink: 0;
}

.value {
  flex: 1;
  color: #333;
}

.value.clickable {
  color: #1890ff;
  text-decoration: underline;
}

.price {
  color: #f5222d;
  font-weight: 500;
}

/* 用户卡片样式 */
.user-card {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.user-phone {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.action-btn {
  font-size: 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 24rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 28rpx;
  margin: 0;
}

.action-btn.call-btn {
  background-color: #f0f8ff;
  color: #1890ff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn .icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 订单状态提示区域 */
.status-tips {
  background-color: #fff;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.status-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.status-icon.completed {
  background-color: #f6ffed;
  color: #52c41a;
  border: 2rpx solid #b7eb8f;
}

.status-icon.cancelled {
  background-color: #fff1f0;
  color: #ff4d4f;
  border: 2rpx solid #ffa39e;
}

.status-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  color: #999;
  max-width: 80%;
  text-align: center;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-around;
  z-index: 1;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.btn {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  margin-right: 8rpx;
}

.primary-btn {
  background-color: #07c160;
  color: #fff;
  border: none;
}

.primary-btn.btn-hover {
  background-color: #06ad56;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #eee;
}

.cancel-btn.btn-hover {
  background-color: #eee;
}

.back-btn {
  background-color: #fff;
  color: #07c160;
  border: 1rpx solid #07c160;
}

.back-btn.btn-hover {
  background-color: #f6ffed;
}

/* 注意事项列表样式 */
.requirements-list {
  padding: 0 20rpx;
}

.requirement-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.requirement-item:last-child {
  margin-bottom: 0;
}

.dot {
  margin-right: 10rpx;
  color: #27BA9B;
}

.text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 时间线样式 */
.timeline {
  padding: 20rpx 0;
}

.timeline-item {
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 30rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 12rpx;
  height: 12rpx;
  background: #27BA9B;
  border-radius: 50%;
}

.timeline-item::after {
  content: '';
  position: absolute;
  left: 5rpx;
  top: 20rpx;
  width: 2rpx;
  height: calc(100% + 10rpx);
  background: #e8e8e8;
}

.timeline-item:last-child::after {
  display: none;
}

.timeline-item .time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.timeline-item .content {
  font-size: 28rpx;
  color: #333;
}

.timeline-item .reason {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 底部操作栏样式 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 0;
}

.action-btn::after {
  border: none;
}

.action-btn.primary {
  background: #27BA9B;
  color: #fff;
}

.action-btn.primary:active {
  opacity: 0.9;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 