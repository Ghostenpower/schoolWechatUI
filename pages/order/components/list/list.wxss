.order-list-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 标签页样式 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 1;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 订单列表样式 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.status-group {
  display: flex;
  align-items: center;
}

.task-status {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
  background-color: #f2f2f2;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.order-status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.order-status.processing {
  background-color: #e6f7ff;
  color: #1890ff;
}

.order-status.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.order-status.cancelled {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 订单内容样式 */
.order-content {
  background-color: #fafafa;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 140rpx;
  color: #666;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

/* 取消信息区域样式 */
.cancel-info {
  background-color: #fff1f0;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #ff4d4f;
}

.cancel-reason, .cancel-time {
  display: flex;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.cancel-time {
  margin-bottom: 0;
}

.cancel-label {
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.cancel-value {
  color: #ff4d4f;
  flex: 1;
}

/* 订单底部样式 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.name {
  font-size: 28rpx;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮样式 */
.order-actions {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding: 0 32rpx;
}

.action-btn.complete {
  background-color: #07c160;
  color: #fff;
}

/* 加载状态样式 */
.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty {
  padding: 100rpx 30rpx;
  color: #666;
}