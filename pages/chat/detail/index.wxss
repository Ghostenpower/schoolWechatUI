.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f7f7f7;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
}

.chat-item {
  display: flex;
  margin-bottom: 30rpx;
}

.chat-item.self {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.message-content {
  max-width: 60%;
}

.chat-item.self .message-content {
  align-items: flex-end;
}

.nickname {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.message-bubble {
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  word-break: break-all;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.chat-item.self .message-bubble {
  background: #07c160;
  color: #fff;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.input-area {
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  background: #07c160;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0;
  line-height: 72rpx;
  transition: all 0.3s;
}

.send-btn.disabled,
.send-btn[disabled] {
  background: #ccc !important;
  color: #fff !important;
  opacity: 0.6 !important;
}

/* 添加按压效果 */
.send-btn:not(.disabled):active {
  opacity: 0.8;
} 