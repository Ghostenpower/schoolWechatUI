/* pages/settings/settings.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.settings-list {
  background: #fff;
  border-radius: 10rpx;
}

.settings-group {
  margin-bottom: 20rpx;
}

.settings-group:last-child {
  margin-bottom: 0;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item text {
  font-size: 28rpx;
  color: #333;
}

.cache-size, .version {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}