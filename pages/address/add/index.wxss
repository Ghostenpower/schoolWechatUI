.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 120rpx;
}

.form {
  background-color: #fff;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.form-item {
  display: flex;
  align-items: flex-start;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
  padding-top: 4rpx;
}

.input {
  flex: 1;
  height: 44rpx;
  min-height: 44rpx;
  font-size: 28rpx;
}

.location-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location-picker text {
  font-size: 28rpx;
  color: #333;
}

.location-picker .placeholder {
  color: #999;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.textarea {
  flex: 1;
  height: 160rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.tag-list {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  background-color: #f7f7f7;
  border-radius: 30rpx;
}

.tag.active {
  color: #07c160;
  background-color: #e8f7ed;
}

.default-switch {
  justify-content: space-between;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.save-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background-color: #07c160;
  border-radius: 40rpx;
} 