.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 余额卡片样式 */
.balance-card {
  background: linear-gradient(135deg, #07c160, #10b981);
  border-radius: 20rpx;
  padding: 40rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.balance-title {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.balance-amount {
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.currency {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.number {
  font-size: 60rpx;
  font-weight: 500;
}

.balance-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
}

.action-btn.recharge {
  background: rgba(255, 255, 255, 0.3);
}

.action-btn.withdraw {
  background: rgba(255, 255, 255, 0.2);
}

/* 交易记录样式 */
.transactions {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.transactions-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.transaction-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.list-header text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  font-size: 28rpx;
  color: #07c160;
  font-weight: normal;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-info {
  display: flex;
  flex-direction: column;
}

.transaction-type {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.transaction-amount.income {
  color: #07c160;
}

.transaction-amount.expense {
  color: #f5222d;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 充值弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.amount-input {
  width: 100%;
  height: 100rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.quick-amounts {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.amount-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #f8f8f8;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.amount-item.active {
  background: #e6f7ff;
  color: #1890ff;
}

.confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
} 