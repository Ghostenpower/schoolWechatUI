/* pages/tasks/detail/index.wxss */
.container {
  background-color: #f2f5f8;
  padding-bottom: 160rpx;
}

/* 详情头部 */
.detail-header {
  background-color: #fff;
  padding: 32rpx 30rpx;
  margin: 20rpx 20rpx 10rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}
.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}
.detail-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.detail-status {
  padding: 6rpx 18rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}
.detail-status.pending { background-color: rgba(255,175,3,0.1); color: #ffaf03; }
.detail-status.accepted { background-color: rgba(39,186,155,0.1); color: #27ba9b; }
.detail-status.completed { background-color: rgba(140,140,140,0.15); color: #8c8c8c; }

/* 通用区块卡片样式 */
.section {
  background-color: #fff;
  margin: 10rpx 20rpx;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}
.section-header {
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background-color: #07c160;
  border-radius: 3rpx;
}

/* 信息行 */
.row {
  display: flex;
  padding: 8rpx 0;
  line-height: 1.6;
}
.row text:first-child {
  width: 120rpx;
  color: #666;
  font-size: 26rpx;
  flex-shrink: 0;
}
.row text:last-child {
  flex: 1;
  color: #333;
  font-size: 26rpx;
}
.row .code {
  color: #27ba9b;
  font-weight: 500;
}

/* 额外要求列表 */
.requirements {
  padding-left: 120rpx;
}
.req-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}
.req-item:last-child { margin-bottom: 0; }

/* 用户信息行 */
.users .user-row {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}
.users .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.users text {
  font-size: 28rpx;
  color: #333;
}
.btn-link {
  margin-left: auto;
  color: #27ba9b;
  font-size: 26rpx;
  padding: 0;
}
.btn-link::after { border: none; }

/* 底部操作栏 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 24rpx 20rpx;
  display: flex;
  justify-content: center;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.08);
}
.btn.primary {
  background-color: #27ba9b;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
  padding: 14rpx 80rpx;
  line-height: 1.4;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: #f8f8f8;
}

.loading {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #27BA9B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 添加 detail-price 样式 */
.detail-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff4d4f;
  flex-shrink: 0;
}

/* 发布者 & 接单者 信息 样式 */
.publisher-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.publisher-details {
  flex: 1;
}
.publisher-details .name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}
.publisher-details .time {
  font-size: 24rpx;
  color: #666;
}
.publisher-actions {
  display: flex;
  flex-direction: column;
}
.publisher-actions .btn-link {
  font-size: 24rpx;
  color: #27ba9b;
  margin: 4rpx 0;
  padding: 0;
}

/* 任务详情 图片列表 样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10rpx;
}
.detail-image {
  width: 173rpx;
  height: 173rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}
.detail-image:nth-child(3n) {
  margin-right: 0;
} 