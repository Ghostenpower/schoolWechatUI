/* pages/tasks/tasks.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 120rpx;
}

/* 顶部标题栏样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
}

.header-left {
  display: flex;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.campus-selector {
  display: flex;
  align-items: center;
  background-color: #f7f7f7;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
}

.campus-name {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.dropdown-icon {
  width: 24rpx;
  height: 24rpx;
}

.header-actions {
  display: flex;
  align-items: center;
}

.my-tasks-btn {
  background-color: #27BA9B;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  margin-right: 20rpx;
}

.my-tasks-btn text {
  color: #fff;
  font-size: 24rpx;
}

.notify-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 搜索栏样式 */
.search-bar {
  padding: 20rpx 30rpx;
  background-color: #fff;
}

/* 公告栏样式 */
.announcement-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
}

.announcement-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.announcement-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}



.search-input-wrap {
  display: flex;
  align-items: center;
  background-color: #f7f7f7;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 广告横幅 */
.ad-banner {
  width: 100%;
  height: 300rpx;
}

.ad-image {
  width: 100%;
  height: 100%;
  border-radius: 0;
}

/* 分类网格 */
.category-grid {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 22%;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  transition: transform 0.3s;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  transition: color 0.3s;
}

.category-item.active .category-name {
  color: #27BA9B;
  font-weight: 500;
}

.category-item.active .category-icon {
  transform: scale(1.1);
}

/* 推荐区域 */
.recommend-section {
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #27BA9B;
  border-radius: 3rpx;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

.recommend-list {
  white-space: nowrap;
  padding: 0 20rpx;
}

.recommend-item {
  display: inline-block;
  width: 260rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background: #f8f8f8;
  margin-right: 16rpx;
  padding: 16rpx;
  position: relative;
  overflow: hidden;
}

.recommend-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 6rpx 12rpx;
  background: rgba(39, 186, 155, 0.8);
  color: #fff;
  font-size: 20rpx;
  border-bottom-left-radius: 12rpx;
}

.recommend-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 80rpx;
}

.recommend-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
}

/* 通用标题栏样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #27BA9B;
  border-radius: 3rpx;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 优化后的校园服务样式 */
.campus-services {
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
  border-radius: 16rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.services-scroll {
  white-space: nowrap;
  padding: 10rpx 30rpx;
}

.enhanced-service-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx;
  margin-right: 20rpx;
}

.service-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
}

.service-icon-wrapper::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.15;
  border-radius: 50%;
}

.service-icon-wrapper.express {
  background-color: rgba(39, 186, 155, 0.1);
}

.service-icon-wrapper.express::after {
  background-color: #27BA9B;
}

.service-icon-wrapper.errand {
  background-color: rgba(255, 143, 31, 0.1);
}

.service-icon-wrapper.errand::after {
  background-color: #ff8f1f;
}

.service-icon-wrapper.shopping {
  background-color: rgba(255, 77, 79, 0.1);
}

.service-icon-wrapper.shopping::after {
  background-color: #ff4d4f;
}

.service-icon-wrapper.print {
  background-color: rgba(100, 110, 255, 0.1);
}

.service-icon-wrapper.print::after {
  background-color: #646eff;
}

.service-icon-wrapper.repair {
  background-color: rgba(82, 196, 26, 0.1);
}

.service-icon-wrapper.repair::after {
  background-color: #52c41a;
}

.service-icon-wrapper.cleaning {
  background-color: rgba(24, 144, 255, 0.1);
}

.service-icon-wrapper.cleaning::after {
  background-color: #1890ff;
}

.service-icon-wrapper.tutor {
  background-color: rgba(245, 106, 0, 0.1);
}

.service-icon-wrapper.tutor::after {
  background-color: #f56a00;
}

.service-icon-wrapper.rental {
  background-color: rgba(114, 46, 209, 0.1);
}

.service-icon-wrapper.rental::after {
  background-color: #722ed1;
}

.service-icon {
  width: 56rpx;
  height: 56rpx;
  z-index: 1;
}

.service-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 优化后的热门任务样式 */
.hot-tasks-section {
  background: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding-bottom: 16rpx;
}

.enhanced-hot-tasks {
  padding: 0 30rpx;
}

.enhanced-hot-task {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.enhanced-hot-task:last-child {
  border-bottom: none;
}

.hot-task-left {
  margin-right: 20rpx;
}

.publisher-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.hot-task-right {
  flex: 1;
}

.hot-task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.hot-task-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.hot-task-tag {
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  color: #fff;
  margin-left: 12rpx;
}

.hot-task-tag.express {
  background-color: #27BA9B;
}

.hot-task-tag.errand {
  background-color: #ff8f1f;
}

.hot-task-tag.shopping {
  background-color: #ff4d4f;
}

.hot-task-tag.other {
  background-color: #8c8c8c;
}

.hot-task-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.hot-task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hot-task-publisher {
  font-size: 24rpx;
  color: #999;
}

.hot-task-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 发布按钮样式 */
.publish-btn {
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  background-color: #27BA9B;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(39, 186, 155, 0.3);
  z-index: 100;
}

.publish-btn .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.publish-btn text {
  color: #fff;
  font-size: 30rpx;
} 