/* 样式待设计 */ 

.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.task-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.task-list {
  padding: 0 10rpx;
}

.task-item {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.task-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.task-status.status-0 {
  background: #fff7e6;
  color: #fa8c16;
}

.task-status.status-1 {
  background: #e6f7ff;
  color: #1890ff;
}

.task-status.status-2 {
  background: #f6ffed;
  color: #52c41a;
}

.task-status.status-3 {
  background: #fff1f0;
  color: #f5222d;
}

.task-content {
  margin-bottom: 20rpx;
}

.task-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.task-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-price {
  font-size: 32rpx;
  color: #f5222d;
  font-weight: bold;
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.task-footer {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.task-actions {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding: 0 32rpx;
  border-radius: 32rpx;
  background: #fff;
  border: none;
}

.action-btn.edit {
  color: #07c160;
  background: none;
}

.action-btn.delete {
  color: #ff4d4f;
  background: none;
}

.action-btn.confirm {
  background-color: #07c160;
  color: #fff;
  border: none;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

.detail-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

.detail-status.completed {
  background-color: #f0f9eb;
  color: #67c23a;
}

.detail-status.pending {
  background-color: #f4f4f5;
  color: #909399;
}

.detail-status.accepted {
  background-color: #ecf5ff;
  color: #409eff;
}

.detail-status.in_progress {
  background-color: #fdf6ec;
  color: #e6a23c;
}

.detail-status.cancelled {
  background-color: #fef0f0;
  color: #f56c6c;
}

.detail-status.pending-delivery {
  background-color: #fdf6ec;
  color: #e6a23c;
} 