/* 消息页面样式 */

/* 页面容器 */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 消息列表 */
.message-list {
  width: 100%;
}

.message-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.message-item:last-child {
  border-bottom: none;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.content {
  flex: 1;
  overflow: hidden;
}

.name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.text {
  font-size: 28rpx;
  color: #999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.right-content {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 100rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.unread-badge {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  height: 36rpx;
  min-width: 36rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}

.loading {
  color: #999;
  font-size: 28rpx;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.retry-button {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 4rpx;
}

.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-message {
  color: #999;
  font-size: 28rpx;
} 