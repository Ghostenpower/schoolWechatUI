/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.page {
  padding: 20rpx;
}

.card {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.btn-primary {
  background: #27BA9B;
  color: #fff;
  border: none;
  border-radius: 10rpx;
}

.text-primary {
  color: #27BA9B;
}

.text-gray {
  color: #999;
}

.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 主题颜色变量 */
page {
  /* 主色调 */
  --primary-color: #27BA9B;
  --primary-light: #4CCDB2;
  --primary-dark: #1E8B74;
  
  /* 次要色调 */
  --secondary-color: #FFA868;
  --secondary-light: #FFB98C;
  --secondary-dark: #FF8B3D;
  
  /* 中性色 */
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-disabled: #999999;
  
  /* 背景色 */
  --bg-primary: #FFFFFF;
  --bg-secondary: #F7F7F7;
  --bg-tertiary: #EEEEEE;
  
  /* 功能色 */
  --success-color: #27BA9B;
  --warning-color: #FFA868;
  --error-color: #FA5151;
  --info-color: #2A6AE9;
  
  /* 边框颜色 */
  --border-color: #EEEEEE;
  
  /* 字体大小 */
  --font-size-xs: 24rpx;
  --font-size-sm: 28rpx;
  --font-size-md: 32rpx;
  --font-size-lg: 36rpx;
  --font-size-xl: 40rpx;
  
  /* 间距 */
  --spacing-xs: 10rpx;
  --spacing-sm: 20rpx;
  --spacing-md: 30rpx;
  --spacing-lg: 40rpx;
  --spacing-xl: 50rpx;
  
  /* 圆角 */
  --radius-sm: 4rpx;
  --radius-md: 8rpx;
  --radius-lg: 16rpx;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 全局基础样式 */
.container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
  padding: var(--spacing-md);
  box-sizing: border-box;
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
}

.text-disabled {
  color: var(--text-disabled);
  font-size: var(--font-size-sm);
}

/* 按钮样式 */
.btn {
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-md);
  font-size: var(--font-size-md);
  text-align: center;
  transition: all 0.3s;
}

.btn-primary {
  background-color: var(--primary-color);
  color: #FFFFFF;
  border: none;
  border-radius: var(--radius-md);
}

.btn-primary:active {
  background-color: var(--primary-dark);
}

.btn-secondary {
  background-color: var(--secondary-color);
  color: #FFFFFF;
}

.btn-secondary:active {
  background-color: var(--secondary-dark);
}

.btn-outline {
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
  background-color: transparent;
}

/* 卡片样式 */
.card {
  background-color: var(--bg-primary);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

/* 列表样式 */
.list {
  background-color: var(--bg-primary);
  border-radius: var(--radius-md);
  overflow: hidden;
}

.list-item {
  padding: var(--spacing-md);
  border-bottom: 2rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-item:last-child {
  border-bottom: none;
}

/* 表单样式 */
.form-group {
  margin-bottom: var(--spacing-md);
}

.form-label {
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
  margin-bottom: var(--spacing-xs);
}

.form-input {
  background-color: var(--bg-primary);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-md);
  padding: var(--spacing-sm);
  font-size: var(--font-size-md);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  margin-right: var(--spacing-xs);
}

.tag-primary {
  background-color: var(--primary-light);
  color: #FFFFFF;
}

.tag-secondary {
  background-color: var(--secondary-light);
  color: #FFFFFF;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: var(--border-color);
  margin: var(--spacing-md) 0;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-lg);
}

/* 空状态 */
.empty {
  text-align: center;
  padding: var(--spacing-xl);
  color: var(--text-secondary);
}

/* 底部安全区域 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 布局工具类 */
.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 页面通用样式 */
.page {
  padding: var(--spacing-md);
} 